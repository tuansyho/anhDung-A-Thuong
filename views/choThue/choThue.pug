	script.
		const styleTittle = document.getElementsByClassName("styleTittle");
		const get = document.getElementsByClassName("get");
		for(let i = 0; i < styleTittle.length; i++){
		styleTittle[i].addEventListener("click", function(){
		const activeTittle = document.getElementsByClassName("activeTittle");
		activeTittle[0].className = activeTittle[0].className.replace(" activeTittle", "");
		this.className += " activeTittle";
		const showContent = document.getElementsByClassName("showContent");
		showContent[0].className = showContent[0].className.replace(" showContent", "")
		get[i].className += " showContent";
		});
		}
